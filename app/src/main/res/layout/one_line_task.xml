<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/oneLineTaskLayout"
    >

    <TextView
        android:id="@+id/textView_ol_descriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Description:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_ol_description" />

    <TextView
        android:id="@+id/textView_ol_endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toEndOf="@+id/textView_ol_endDateLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_ol_beginDate" />

    <TextView
        android:id="@+id/textView_ol_taskStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Status:"
        app:layout_constraintStart_toEndOf="@+id/textView_ol_description"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_ol_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView_ol_taskStatusLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_ol_endDateLabel"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="End Date:"
        app:layout_constraintStart_toEndOf="@+id/textView_ol_description"
        app:layout_constraintTop_toBottomOf="@+id/textView_ol_beginDateLabel" />

    <TextView
        android:id="@+id/textView_ol_beginDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Begin Date:"
        app:layout_constraintStart_toEndOf="@+id/textView_ol_description"
        app:layout_constraintTop_toBottomOf="@+id/textView_ol_taskStatusLabel" />

    <TextView
        android:id="@+id/textView_ol_beginDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toEndOf="@+id/textView_ol_beginDateLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_ol_Status" />

    <TextView
        android:id="@+id/textView_ol_description"
        android:layout_width="194dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_ol_descriptionLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>